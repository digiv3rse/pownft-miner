{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true
  },
  "include": ["./**/*.ts", "./config.json"],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}
